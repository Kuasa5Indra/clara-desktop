<basic:MyPage  xmlns:basic="clr-namespace:Velacro.UIElements.Basic;assembly=Velacro" x:Class="CLARA_Desktop.Home.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CLARA_Desktop.Home"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage">

    <Grid>
        <Label Content="Waiting on Approval" HorizontalAlignment="Left" Margin="90,10,0,0" VerticalAlignment="Top"/>
        <Label Content="On Reservation" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="321,10,0,0"/>
        <Label Content="Returned" HorizontalAlignment="Left" Margin="562,10,0,0" VerticalAlignment="Top"/>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="100" Margin="90,41,0,0" Stroke="Black" VerticalAlignment="Top" Width="118"/>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="100" Margin="321,41,0,0" Stroke="Black" VerticalAlignment="Top" Width="118"/>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="100" Margin="562,41,0,0" Stroke="Black" VerticalAlignment="Top" Width="118"/>
        <Label x:Name="waiting_txtCount" Content="0" HorizontalAlignment="Left" Margin="139,74,0,0" VerticalAlignment="Top"/>
        <Label x:Name="reserve_txtCount" Content="0" HorizontalAlignment="Left" Margin="374,74,0,0" VerticalAlignment="Top"/>
        <Label x:Name="return_txtCount" Content="0" HorizontalAlignment="Left" Margin="615,74,0,0" VerticalAlignment="Top"/>
        <ListView x:Name="recent_reservation_Lv" HorizontalAlignment="Left" Height="226" Margin="90,201,0,0" VerticalAlignment="Top" Width="590">
            <ListView.View>
                <GridView x:Name="recent_reservation_Gv">
                    <GridViewColumn Header="Date" DisplayMemberBinding="{Binding Date_begin}"/>
                    <GridViewColumn Header="Reservee" DisplayMemberBinding="{Binding User.Full_name}"/>
                    <GridViewColumn Header="Item Reserved" DisplayMemberBinding="{Binding Asset.Name}"/>
                    <GridViewColumn Header="Status" DisplayMemberBinding="{Binding Status}"/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</basic:MyPage>
